---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout>
  <h1 class="font-bold text-xl mb-4">Search</h1>

  <div>
    <div id="search"></div>
    <script>
      window.addEventListener("DOMContentLoaded", (event) => {
        // @ts-ignore
        new PagefindUI({
          element: "#search",
          showSubResults: true,
          showImages: false,
        });
      });
    </script>
  </div>
</MainLayout>
