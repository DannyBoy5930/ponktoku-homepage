---
const { length, currentUrl, currentPage, firstUrl, prevUrl, nextUrl, lastUrl } =
  Astro.props;
const paginationList = Array.from({ length: Number(length) }, (_, i) => i + 1);
console.log(currentPage);
---

<nav aria-label="Page navigation example" class="flex justify-center mt-8">
  <ul class="inline-flex -space-x-px text-sm">
    <li>
      <a
        href={prevUrl}
        class="flex items-center justify-center px-3 h-8 ms-0 leading-tight bg-white border border-e-0 border-gray-300 rounded-s-lg hover:bg-gray-100 hover:text-gray-700 dark:bg-article-bg dark:border-article-border dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white"
        >Previous</a
      >
    </li>
    {
      paginationList.map((num) => (
        <li>
          <a
            href={`${firstUrl}${num == 1 ? "" : "/" + num}`}
            class={
              num === currentPage
                ? "flex items-center justify-center px-3 h-8 leading-tight text-white bg-lm-green border border-gray-300 hover:bg-lm-green-hover hover:text-white dark:bg-dm-green-button dark:border-article-border dark:text-lm-text-color dark:hover:bg-dm-button-hover dark:hover:text-lm-text-color"
                : "flex items-center justify-center px-3 h-8 leading-tight bg-white border border-gray-300 hover:bg-gray-100 hover:text-gray-700 dark:bg-article-bg dark:border-article-border dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white"
            }
          >
            {num}
          </a>
        </li>
      ))
    }
    <li>
      <a
        href={nextUrl}
        class="flex items-center justify-center px-3 h-8 leading-tight bg-white border border-gray-300 rounded-e-lg hover:bg-gray-100 hover:text-gray-700 dark:bg-article-bg dark:border-article-border dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white"
        >Next</a
      >
    </li>
  </ul>
</nav>
