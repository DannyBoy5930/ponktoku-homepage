---
import { capitalise } from "../utils";

const { tags } = Astro.props;

interface Props {
  tags: string[];
}
---

<div class="flex flex-wrap gap-2">
  {
    tags.map((tag: string, index: number) => (
      <span
        class={
          index % 2 === 0
            ? "px-2 py-1 bg-pink-500 text-white rounded-md text-xs hover:opacity-80"
            : "px-2 py-1 bg-blue-500 text-white rounded-md text-xs hover:opacity-80"
        }
      >
        <a href={"/posts/tag/" + tag}>#{capitalise(tag)}</a>
      </span>
    ))
  }
</div>
